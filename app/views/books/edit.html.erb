<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div id= "error_explanation"><h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul></div>
  <% end %>
<%= form_with model: @book do |f| %>

  <label for="book_title">Title</label>
  <%= f.text_field :title %>

  <label for="book_body">Body</label>
  <%= f.text_area :body %>
  <div class="actions">
  <%= f.submit 'Update Book' %>
  </div>
  <%= link_to 'Show', book_path(@book.id), class: "text-submit" %>
  |
  <%= link_to "Back", '/books', class: "text-submit" %>
<% end %>

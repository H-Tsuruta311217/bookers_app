<h1>Books</h1>

<% @books.each do |book| %>

  <table>
<thead>
<tr>
<th>Title</th>
<th>Body</th>
<th colspan="3"></th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
<td><%= @books.title %></td>
<td><%= @books.body %></td>
<td><%= link_to 'Show', book_path(@book.id) %></td>
<td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
<td><%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
</tr>
<% end %>
</tbody>
</table>

<% end %>
